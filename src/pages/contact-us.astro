---
// Types

// Components
import { getTranslations } from "../../utils/api-requests";
import ContactUsPage from "../components/contact-us/contactUs.svelte";
import MainLayout from "../layouts/MainLayout.astro";

const translationStore = await getTranslations();

// TODO
let seo = {
  pageTitle: "Contact Us",
  metaDescription: "Contact Us",
  url: "",
};

// Tell the browser to always check the freshness of the cache
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, must-revalidate"
);

// CDN Cache Control
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=300, s-maxage=3600, stale-while-revalidate=30"
);

---

<MainLayout seoData={seo}>
  <ContactUsPage translations={translationStore ?? {}} client:load />
</MainLayout>
