---
// Components
import MainLayout from "../../layouts/MainLayout.astro";
import ForgotPasswordForm from "../../components/auth/forgotPasswordForm.svelte";
import { getTranslations } from "../../../utils/api-requests";

const translationStore = await getTranslations();

// TODO
let seo = {
  pageTitle: "Recover Password",
  metaDescription: "Recover Password Description",
  url: "",
};

// Tell the browser to always check the freshness of the cache
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, must-revalidate"
);

// CDN Cache Control
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=300, s-maxage=3600, stale-while-revalidate=30"
);
---

<MainLayout seoData={seo}>
  <ForgotPasswordForm translations={translationStore ?? {}} client:load />
</MainLayout>
