---

// Types
import type { imageWithParagraph } from "../../../interfaces/common/types"

// Components
import Image from "../helpers/images.astro"

const { data } = Astro.props

---

<div class="bg-white rounded-lg border border-grey-300 p-[6px] md:flex items-center mb-[40px]">
    {
                <div class="flex justify-center items-center md:mr-[40px] w-full md:w-auto rounded-[6px] border border-[rgba(255_255_255_0.3)]">
                    <Image
                        src={data?.image?.data[0]?.attributes?.url}
                        imageWidth={436}
                        imageHeight={344}
                        classes="img-fluid rounded-[6px]"
                        alt={data?.image?.data?.attributes?.alt}
                    />
                </div>
                <div class="flex flex-col md:col-span-3 justify-center iwc-anchor">
                    <h2 class="capitalize mb-4 mt-4 md:mt-0 text-blue-700 text-base md:text-[32px] md:leading-[38px]">{data.title}</h2>
                    <Fragment set:html={data.content} />
                </div>
    }
</div>
<style lang="scss">
:global(.iwc-anchor a) {
    color: blue;
    text-decoration: underline;
}
</style>