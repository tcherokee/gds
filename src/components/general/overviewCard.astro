---
import Icon from "astro-icon";
import Link from "../helpers/link.astro";
import Image from "../helpers/images.astro";

const { overview } = Astro.props;
---

<Link href={`${overview?.url}/`} class="btn btn-secondary blog-btn">
  <div
    class="overview-box"
    style={"background-image: url(" +
      overview?.card_img?.data?.attributes?.url +
      "); background-repeat: no-repeat; background-size: cover;"}
  >
    <div
      class="relative flex justify-center h-full items-center rounded-lg p-5 text-white z-40 font-bold text-[20px] bold"
    >
      {overview?.title}
      <Icon name="chevron-right" height="25px" />
    </div>
    <div
      class="absolute pointer-events-none h-full left-0 top-0 w-full bg-[linear-gradient(180deg,rgba(47,18,58,0)_0%,rgba(31,18,58,0.6)_37.79%)]"
    >
      <!-- <Image
        src={overview?.card_img?.data?.attributes?.url}
        alt={overview?.title}
        imageWidth={315}
        imageHeight={155}
        classes="rounded-lg w-full h-full opacity-50 blur-[1px]"
      /> -->
    </div>
  </div>
</Link>

<style>
  .overview-box {
    @apply relative py-10 font-lato bg-no-repeat bg-center bg-cover;
    background: rgba(1, 87, 155, 0.2);
    backdrop-filter: blur(1px);
    border-radius: 16px;
    border: 1px solid var(--Effects-blur-stroke, rgba(255, 255, 255, 0.3));
    /* Shadow/Medium */
    box-shadow:
      0px 4px 6px -1px rgba(16, 24, 40, 0.1),
      0px 2px 4px -2px rgba(16, 24, 40, 0.1);
  }
</style>
