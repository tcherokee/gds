---
//Third Party Modules
import Icon from "astro-icon";
// Types

// Stores

// Components
import Collapse from "../helpers/collapse.astro";

const { data } = Astro.props;

---

<details open class="group mb-5">
  <summary
    class="flex flex-row rounded-md cursor-pointer text-base md:text-xl font-medium bg-quicklinks-btn-bkg text-white p-3 group-open:rounded-b-none"
  >
    {data.question}
    <Icon
      name="minus"
      width="25px"
      class="hidden group-open:block ml-auto fill-white"
    />
    <Icon
      name="plus"
      width="25px"
      class="fill-white block group-open:hidden ml-auto"
    />
  </summary>
  <Fragment
    set:html={data.answer}
    data-suffix="R:"
    class=""
  />
</details>

<style lang="postcss">
  summary + :global(p) {
    @apply p-3 bg-white rounded-b-md;
  }
</style>
