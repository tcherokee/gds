// Components
import Collapse from "../helpers/collapse.astro";

const { data } = Astro.props;
---

<Collapse
  id={"data" + data.id}
  label={data.question}
  labelIcon={`<span class="mr-3">D:</span>`}
  containerClass="mb-5"
  labelClass="text-base md:text-xl font-medium bg-quicklinks-btn-bkg text-white p-3"
  collapseClass="bg-white rounded-b-md"
  checked={true}
>
  <div slot="content" class="flex">
    <span class="mr-4 text-xl"> R:</span>
    <span>
      <Fragment set:html={data.answer} />
    </span>
  </div>
</Collapse>
