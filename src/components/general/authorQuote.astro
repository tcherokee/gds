  }

  .testimonial-wrapper {
    background: #eef4f9;
  }

  .testimonial_author {
    font-size: 12px;
    align-items: flex-start;

    .approval {
      display: flex;
      // flex-direction: column;
      justify-content: center;
      align-items: center;
      max-width: 230px;

      .review_author_img {
        width: 40px;
        height: 40px;
        margin-right: 10px;
        overflow: hidden;
        flex-shrink: 0;

        :global(img) {
          border-radius: 50%;
        }
      }

      .details-container {
        align-items: center;
        justify-content: center;

