---
const { data } = Astro.props;

// Helpers
import Images from "../helpers/images.astro";
---

<div class="bg-white p-3 casino-summary-wrapper rounded my-5">
  <div class="flex flex-col justify-evenly p-3">
    <div class="flex justify-between mb-3">
      <div class="flex testimonial_author w-full md:justify-start">
        <div class="approval-author mr-10">
          <div class="review_author_img mr-2">
            <Images
              src={`${data?.image?.data?.attributes?.url}`}
              imageWidth={40}
              imageHeight={40}
              alt={data?.authorName}
            />
          </div>
          <div class="flex flex-col details-container">
            <div class="approval-author-details">
              <span class="">{data?.authorName}</span>
              <span class="">{data?.authorJobTitle}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <i class="">"{data?.quote}"</i>
  </div>
</div>

