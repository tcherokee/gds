<style lang="postcss">
	.blog-wrapper {
		@apply shadow-[0_0.125rem_0.25rem_rgba(theme('colors.black')_0.075)];
		position: relative;
		z-index: 1;
		display: flex;
		flex-direction: column;
		
		.blog-card {
			position: relative;
			height: 385px;
			border-radius: 4px;
			overflow: hidden;
	
			figure {
				background: theme('colors.blog-card-figure-bkg');
				height: 385px;
				margin: 0;
				padding: 0;
				overflow: hidden;
	
				:global(.blog-image) {
					display: block;
					width: 100%;
					opacity: 0.9;
					/* transition: all 0.3s cubic-bezier(0.37, 0.75, 0.61, 1.05) 0s; */
				}
			}
	
			.overlay {
				position: absolute; 
				bottom: 0; 
				border-top: 1px solid var(--Effects-blur-fill, rgba(255, 255, 255, 0.36));
				background: var(--Effects-blur-stroke, rgba(255, 255, 255, 0.30));
				backdrop-filter: blur(11px);
				color: #f1f1f1; 
				width: 100%;
				color: #fff;
				padding: 20px;
			}
	
			.blog-category {
				background: linear-gradient(180deg, #3fe6fc 0%, #00bcd4 100%);
				box-shadow: 0px 2px 8px rgba(0, 188, 212, 0.4);
				padding: 1px 6px;
			}
	
			.blog-meta {
				font-size: 14px;
				color: theme('colors.blog-meta');
			}
	
			&:hover {
				box-shadow: 0px 1px 35px 0px theme('colors.blog-card-hover-shadow');
	
				:global(.blog-image) {
					transition: all 0.3s cubic-bezier(0.37, 0.75, 0.61, 1.05) 0s;
					opacity: 0.7;
					transform: scale(1.1);
				}
	
				.blog-content {
					p {
						height: 80px;
						transition: all 0.3s cubic-bezier(0.37, 0.75, 0.61, 1.05) 0s;
					}
				}
			}
		}

		.blog-content {
			border-radius: 0px 0px 4px 4px;

			h4 {
				a {
					text-decoration: none;
					color: #000000;
					/* color: theme('colors.blog-content-header-anchor'); */
				}
			}
		}
	}

</style>
