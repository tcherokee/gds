FROM node:lts AS runtime
WORKDIR /app

COPY . .

ARG API_URL
ARG SITE_ID
ARG API_TOKEN
ARG MEILISEARCH_HOST
ARG MEILISEARCH_SEARCH_KEY
ARG MEILISEARCH_INDEX_NAME
ARG ROOT_DOMAIN
ARG HOSTNAME
ARG FULL_URL
ARG LANG

ENV API_URL=$API_URL \
    SITE_ID=$SITE_ID \
    API_TOKEN=$API_TOKEN \
    MEILISEARCH_HOST=$MEILISEARCH_HOST \
    MEILISEARCH_SEARCH_KEY=$MEILISEARCH_SEARCH_KEY \
    MEILISEARCH_INDEX_NAME=$MEILISEARCH_INDEX_NAME \
    ROOT_DOMAIN=$ROOT_DOMAIN \
    HOSTNAME=$HOSTNAME \
    FULL_URL=$FULL_URL \
    LANG=$LANG

RUN npm install
RUN npm run build

ENV HOST=0.0.0.0
ENV PORT=4321
EXPOSE 4321
CMD node ./dist/server/entry.mjs